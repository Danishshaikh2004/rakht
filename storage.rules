rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow authenticated users to upload files
      allow write: if request.auth != null;

      // Allow authenticated users to read files
      allow read: if request.auth != null;

      // Allow anyone to read files (for public access to uploaded documents)
      // Uncomment the line below if you want public read access
      // allow read: if true;
    }
  }
}
